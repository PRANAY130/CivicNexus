rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'tickets' collection
    match /tickets/{ticketId} {
      // Allow any authenticated user to create a ticket
      allow create: if request.auth != null;
      
      // Allow any authenticated user to read all tickets (for map views)
      allow read: if request.auth != null || get(/databases/$(database)/documents/municipality/$(request.resource.data.userId)) != null;
      
      // Allow users to update or delete only their own tickets
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Rules for the 'municipality' collection
    match /municipality/{userId} {
      // Allow public read access for login verification, but deny writes.
      allow read: if true;
      allow write: if false; // Disallow client-side writes for security
    }
  }
}
